{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/api/search",
        "function": "search"
      },
      {
        "source": "/api/auction/bid",
        "function": "bid"
      },
      {
        "source": "/api/book/order",
        "function": "order"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
